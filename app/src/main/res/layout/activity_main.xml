<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="5">

    <TableRow>

        <TextView
            android:id="@+id/activity_main_text_view"
            android:layout_span="4"
            android:text="0" />
    </TableRow>

    <TableRow>

        <Button android:text="7"
            android:id="@+id/activity_main_7"/>

        <Button android:text="8"
            android:id="@+id/activity_main_8"/>

        <Button android:text="9"
            android:id="@+id/activity_main_9"/>

        <Button android:text="/"
            android:id="@+id/activity_main_div"/>
    </TableRow>

    <TableRow>

        <Button android:text="4"
            android:id="@+id/activity_main_4"/>

        <Button android:text="5"
            android:id="@+id/activity_main_5"/>

        <Button android:text="6"
            android:id="@+id/activity_main_6"/>

        <Button android:text="*"
            android:id="@+id/activity_main_mul"/>
    </TableRow>

    <TableRow>

        <Button android:text="1"
            android:id="@+id/activity_main_1"/>

        <Button android:text="2"
            android:id="@+id/activity_main_2"/>

        <Button android:text="3"
            android:id="@+id/activity_main_3"/>

        <Button android:text="-"
            android:id="@+id/activity_main_sub"/>
    </TableRow>

    <TableRow>

        <Button android:text="c"
            android:id="@+id/activity_main_c"/>

        <Button android:text="0"
            android:id="@+id/activity_main_0"/>

        <Button android:text="="
            android:id="@+id/activity_main_equal"/>

        <Button android:text="+"
            android:id="@+id/activity_main_plus"/>
    </TableRow>


</TableLayout>


